<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_header"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            
            >
        <TextView
            android:id="@+id/category_related_item_titlebar_tv"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
             android:layout_centerInParent="true"
            android:text="Browse ads"
            android:textColor="#fff"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/category_related_item_settings_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tab_settings" />
        </RelativeLayout>
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#12059E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_header"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/category_related_item_placed_today_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_placedtoday" />

        <ImageView
            android:id="@+id/category_related_item_category_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_category_selected" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/tab_bg"
         >
    
<LinearLayout
            android:id="@+id/category_related_item_category_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_tasbg" 
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="Category"
                    android:maxLength="15"
                    android:layout_gravity="center"
                    
                    android:textColor="#fff"
                    android:textSize="25sp" />
                
                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=":"
                    android:maxLength="12"
                    android:layout_marginLeft="80dp"
                    android:textColor="#fff"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/category_related_item_category_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:textSize="30sp" />
            </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
       
        android:layout_below="@+id/category_related_item_category_name_ll"
         >
        
        <ListView
            android:id="@+id/category_related_item_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="5dp"
            android:layout_margin="20dp"
            android:paddingBottom="80dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:scrollbars="none" >
        </ListView>

        <include layout="@layout/bottombar" />
    </RelativeLayout>
</RelativeLayout>
</LinearLayout>