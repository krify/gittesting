<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/placedtoday_pdetails_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/placedtoday_pdetails_titlebar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Details           "
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/placedtoday_pdetails_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#12059E" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp" >
                    
                    

                    <LinearLayout
                        android:id="@+id/commentsv_coverpic_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <com.marketplace.views.HorizontalPager
                            android:id="@+id/horizontal_pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:background="#fff" >
                        </com.marketplace.views.HorizontalPager>

                        <ImageView
                            android:id="@+id/commentsv_coverpic"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#444341"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_slider_dot1_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/eclipse" />

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_slider_dot2_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/eclipse" />

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_slider_dot3_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/eclipse" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:text="Title"
                            android:textColor="#05949E"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:maxLength="12"
                            android:text=":"
                            android:textColor="#28F1C2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_title_status_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@drawable/dividerline"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_description_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:text="Description :"
                            android:textColor="#05949E"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:maxLength="12"
                            android:text=":"
                            android:textColor="#28F1C2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_description_status_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_category_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cate" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_category_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_price_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/price" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_price_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_post_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/post" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_post_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_postby_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/postby" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_postby_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_sendemail_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sendemail" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_sendemail_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_mobile_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_mobile_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_locations_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/locations" />

                    <TextView
                        android:id="@+id/placedtoday_pdetails_placedtoday_pdetails_locations_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/optionsbg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#77777A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>