<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        >
    <ImageView 
        android:id="@+id/browse_ads_individual_add_product_image_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        
        />
    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView 
            android:id="@+id/browse_ads_individual_add_product_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#8090ED"
            android:visibility="gone"
            android:maxLength="20"
            />
        
        <TextView 
            android:id="@+id/browse_ads_individual_add_item_product_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#8090ED"
            android:singleLine="true"
            
            />
        <LinearLayout 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tab_location_small_icon"
                />
            <TextView 
                android:id="@+id/browse_ads_individual_add_product_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:singleLine="true"
            />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tab_price_small_icon"
                />
             <TextView 
                android:id="@+id/browse_ads_individual_add_product_currency_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:textSize="25sp"
            android:singleLine="true"
            />
            <TextView 
                android:id="@+id/browse_ads_individual_add_product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textSize="30sp"
            android:singleLine="true"
            />
            
        </LinearLayout>
         <LinearLayout 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tab_phone_small_icon"
                />
            <TextView 
                android:id="@+id/browse_ads_individual_add_product_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            
            android:text="sddasads"
            android:textSize="25sp"
            />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>